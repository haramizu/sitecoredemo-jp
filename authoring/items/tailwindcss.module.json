{
  "$schema": "../../.sitecore/schemas/ModuleFile.schema.json",
  "namespace": "tailwindcss",
  "items": {
    "includes": [
      {
        "name": "tailwindcss",
        "path": "/sitecore/content/Sites/Tailwindcss",
        "rules": [
          {
            "path": "/home",
            "scope": "SingleItem",
            "allowedPushOperations": "CreateOnly"
          },
          {
            "path": "/Media",
            "scope": "SingleItem",
            "allowedPushOperations": "CreateAndUpdate"
          },
          {
            "path": "/Data",
            "scope": "ItemAndChildren",
            "allowedPushOperations": "CreateAndUpdate"
          },
          {
            "path": "/Dictionary",
            "scope": "ItemAndChildren",
            "allowedPushOperations": "CreateOnly"
          },
          {
            "path": "/Presentation",
            "scope": "ItemAndDescendants",
            "allowedPushOperations": "CreateAndUpdate"
          },
          {
            "path": "/Settings/Site Grouping",
            "scope": "ItemAndDescendants",
            "allowedPushOperations": "CreateOnly"
          },
          {
            "path": "/Settings",
            "scope": "ItemAndChildren",
            "allowedPushOperations": "CreateAndUpdate"
          },
          {
            "path": "*",
            "scope": "Ignored"
          }
        ]
      }
    ]
  }
}
